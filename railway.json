{
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "gunicorn app:create_app() --bind 0.0.0.0:$PORT --log-level debug --capture-output --enable-stdio-inheritance --timeout 30 --workers 1",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 10,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 1
    },
    "variables": {
        "FLASK_ENV": "production",
        "FLASK_DEBUG": "0",
        "PYTHONUNBUFFERED": "1"
    }
}