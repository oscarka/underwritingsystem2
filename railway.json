{
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "flask db upgrade && python init_db.py && gunicorn 'app:create_app()' --bind 0.0.0.0:$PORT --workers 1 --timeout 120 --log-level debug",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 30,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    },
    "variables": {
        "FLASK_ENV": "production",
        "FLASK_DEBUG": "0",
        "PYTHONUNBUFFERED": "1",
        "SECRET_KEY": "railway-deployment-secret-key",
        "ADMIN_USERNAME": "admin",
        "ADMIN_PASSWORD": "admin@railway2024",
        "FLASK_APP": "app:create_app()"
    }
}