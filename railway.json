{
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "python init_db.py && gunicorn 'app:create_app()' --bind 0.0.0.0:$PORT",
        "healthcheckPath": "/",
        "healthcheckTimeout": 30,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    },
    "variables": {
        "FLASK_ENV": "production",
        "PYTHONUNBUFFERED": "1",
        "SQLALCHEMY_TRACK_MODIFICATIONS": "false",
        "LOG_TO_STDOUT": "true"
    }
}