{
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "gunicorn app:create_app() --bind 0.0.0.0:$PORT --workers 1 --timeout 120",
        "healthcheckPath": "/",
        "healthcheckTimeout": 30
    },
    "variables": {
        "FLASK_ENV": "production"
    }
}